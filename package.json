{
  "name": "guild",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:scss": "sass src/styles:dist/styles --no-source-map",
    "build:html": "cpx \"src/**/*.html\" dist",
    "build:js": "cpx \"src/scripts/**/*.js\" dist/scripts",
    "build:img": "cpx \"src/img/**/*\" dist/img",
    "build:assets": "cpx \"src/assets/**/*\" dist/assets",
    "build:fonts": "cpx \"node_modules/line-awesome/dist/line-awesome/fonts/**/*\" dist/fonts",
    "build": "npm run build:scss && npm run build:html && npm run build:js && npm run build:img && npm run build:assets && npm run build:fonts",
    "watch:scss": "sass src/styles:dist/styles --no-source-map --watch",
    "watch:html": "cpx \"src/**/*.html\" dist --watch",
    "watch:js": "cpx \"src/scripts/**/*.js\" dist/scripts --watch",
    "watch:img": "cpx \"src/img/**/*\" dist/img --watch",
    "watch:assets": "cpx \"src/assets/**/*\" dist/assets --watch",
    "serve": "live-server dist --port=8080 --open",
    "auth-server": "node server.cjs",
    "dev": "npm run build && concurrently \"npm run watch:scss\" \"npm run watch:html\" \"npm run watch:js\" \"npm run watch:img\" \"npm run watch:assets\" \"npm run serve\" \"npm run auth-server\"",
    "clean": "rm -rf dist/* && mkdir -p dist"
  },
  "keywords": [],
  "author": "Jonny Pyper",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cpx": "^1.5.0",
    "live-server": "^1.2.2",
    "sass": "^1.93.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "line-awesome": "^1.3.0",
    "masonry-layout": "^4.2.2",
    "node-fetch": "^2.7.0"
  }
}
